<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Eumar Rice Mill</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<style>
   body {
      font-family: 'Poppins', 'Segoe UI', sans-serif;
      background-color: #F5F7F5;
      overflow-x: hidden;
    }

    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #2E8B57;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 1rem;
      color: white;
      display: flex;
      flex-direction: column;
      overflow-y: auto;
      box-shadow: 2px 0 10px rgba(0,0,0,0.08);
    }

    .sidebar-logo img {
      width: 150px;
      height: 150px;
      object-fit: contain;
      border-radius: 50%;
      margin: 0 auto 1rem;
      display: block;
      box-shadow: 5px rgb(246,243,243);
    }

    .sidebar h2 {
      text-align: center;
      font-weight: 700;
      letter-spacing: 1px;
      font-size: 1.3rem;
      color: #A7C957;
      margin-bottom: 1.5rem;
      user-select: none;
    }

    .nav-link {
      color: #FDFDFD;
      font-weight: 500;
      padding: 0.75rem 1.5rem;
      transition: background-color 0.3s, padding-left 0.2s;
      border-left: 4px solid transparent;
    }

    .nav-link:hover {
      background-color: #3DAE72;
      border-left: 4px solid #A7C957;
      padding-left: 1.8rem;
      text-decoration: none;
    }

    .nav-link.active {
      background-color: #276749;
      border-left: 4px solid #A7C957;
    }

    .nav-link svg {
      width: 20px;
      height: 20px;
      margin-right: 0.8rem;
      fill: white;
    }
    
  .topbar {
    position: fixed;
    top: 0;
    left: 250px;
    right: 0;
    height: 60px;
    background-color: #2E8B57; 
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    z-index: 999;
    padding: 0 1rem;
  }

  .topbar a {
    color: white;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s;
    font-size: 0.95rem;
  }

  .topbar a:hover { color: #A7C957; }
main {
  margin-left: 250px; 
  margin-top: 0;       
  padding: 0.5rem 1rem; 
  background-color: transparent;
}
  .main-content {
    margin-left: 250px;
    margin-top: 30px; 
    padding: 1.5rem 2rem;
  }

  .filter-form input,
  .filter-form button {
    height: 40px;
    border-radius: 6px;
  }

  .filter-form input[type="date"] {
    border: 1px solid #ccc;
    padding: 0 10px;
  }

  .filter-form button {
    background-color: #27ae60;
    color: white;
    font-weight: 600;
    border: none;
    transition: all 0.3s ease;
  }
  .filter-form button:hover {
    background-color: #219150;
    box-shadow: 0 4px 10px rgba(39, 174, 96, 0.3);
  }

  .chart-box {
    background-color: #fff;
    padding: 1.8rem;
    border-radius: 12px;
    box-shadow: 0 8px 18px rgba(0,0,0,0.08);
    height: 420px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .chart-box h3 {
    text-align: center;
    margin-bottom: 1.2rem;
    font-weight: 600;
    color: #2c3e50;
  }

  @media (max-width: 992px) {
    .chart-box { height: 350px; }
  }

  @media (max-width: 768px) {
    .sidebar { width: 70px; }
    .sidebar h2 { display: none; }
    .nav-link { justify-content: center; font-size: 0; }
    .nav-link svg { margin: 0; }
    .nav-link span { display: none; }
    .main-content { margin-left: 70px; padding: 1rem; }
    .topbar { padding: 0 1rem; justify-content: center; gap: 1rem; }
  }
  </style>
</head>
<body>

  <aside class="sidebar">
    <div class="sidebar-logo">
      <img src="/erm-logo-removebg-preview.png" alt="ERM Logo">
    </div>
    <h2>EUMAR</h2>
    <a href="/admin" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8v-10h-8v10zm0-18v6h8V3h-8z"/></svg>
      Dashboard
    </a>
    <a href="/admin/sales" class="nav-link active">
      <svg viewBox="0 0 24 24"><path d="M4 19h16v-2H4v2zm0-6h16v-2H4v2zm0-6v2h16V7H4z"/></svg>
      Sales
    </a>
    <a href="/admin/queue" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M12 7V3L8 7h4zm0 2v7h-4l4 4 4-4h-4v-7z"/></svg>
      Queue
    </a>
    <a href="/admin/inventory" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M4 4h16v2H4V4zm0 4h16v12H4V8zm3 2v8h2v-8H7zm4 0v8h2v-8h-2zm4 0v8h2v-8h-2z"/></svg>
      Inventory
    </a>
     <a href="/user-management" class="nav-link">
      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
      <span>Acitivity Logs</span>
    </a>
  <a href="/logout" class="nav-link mt-auto text-white">
  <svg viewBox="0 0 24 24" fill="white">
    <path d="M16 13v-2H7V8l-5 4 5 4v-3zM20 3h-8v2h8v14h-8v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
  </svg>
  Logout
</a>
  </aside>

<div class="main-content">
<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
<div class="d-flex flex-column align-items-center flex-grow-0" 
     style="padding: 2rem; background-color: #ffffff; border-radius: 12px; box-shadow: 0 4px 10px rgba(39,174,96,0.15); max-width: 320px; margin-left: 1rem;">
  <h6 class="mb-3" style="font-weight: 700; font-size: 1.3rem; color: #151615;">Total Transactions</h6>
  <p class="mb-0 fw-bold text-success" style="font-size: 4rem; line-height: 1;"> <%= totalTransactions %> </p>
</div>

  <form id="filterForm" action="/admin/sales" method="GET" class="d-flex gap-2 flex-wrap align-items-center" style="max-width: 380px;">
    <input type="date" name="startDate" id="startDate" required class="form-control" style="max-width: 180px;">
    <input type="date" name="endDate" id="endDate" required class="form-control" style="max-width: 180px;">
    <button type="submit" class="btn btn-success" style="height: 40px; min-width: 90px;">Filter</button>
  </form>

</div>


  <div class="row g-4">
    <div class="col-lg-6 col-md-12">
      <div class="chart-box">
        <h3>Total Revenue</h3>
        <canvas id="revenueChart"></canvas>
      </div>
    </div>
    <div class="col-lg-6 col-md-12">
      <div class="chart-box">
        <h3>Total Sales</h3>
        <canvas id="salesChart"></canvas>
      </div>
    </div>
  </div>
</div>

<script>
const labels = JSON.parse('<%- JSON.stringify(chartLabels) %>');
const revenueData = JSON.parse('<%- JSON.stringify(chartRevenueData) %>');
const salesData = JSON.parse('<%- JSON.stringify(chartSalesData) %>');

const revenueCtx = document.getElementById('revenueChart').getContext('2d');
const salesCtx = document.getElementById('salesChart').getContext('2d');

function createGradient(ctx, start, end) {
  const gradient = ctx.createLinearGradient(0, 0, 0, 400);
  gradient.addColorStop(0, start);
  gradient.addColorStop(1, end);
  return gradient;
}

new Chart(revenueCtx, {
  type: 'bar',
  data: { labels, datasets: [{ label: 'Revenue (â‚±)', data: revenueData, backgroundColor: createGradient(revenueCtx, 'rgba(41,128,185,0.8)', 'rgba(41,128,185,0.4)'), borderColor: 'rgba(41,128,185,1)', borderWidth: 1, borderRadius: 6 }] },
  options: { responsive:true, maintainAspectRatio:false, plugins:{ tooltip:{backgroundColor:'#2E8B57', titleColor:'#fff', bodyColor:'#fff', padding:10, cornerRadius:8 }, legend:{display:false} }, scales:{ y:{ beginAtZero:true, grid:{ color:'rgba(0,0,0,0.05)'}}, x:{grid:{display:false}}} }
});

new Chart(salesCtx, {
  type: 'bar',
  data: { labels, datasets: [{ label: 'Total Sales (Qty)', data: salesData, backgroundColor: createGradient(salesCtx, 'rgba(46,204,113,0.8)','rgba(46,204,113,0.4)'), borderColor:'rgba(46,204,113,1)', borderWidth:1, borderRadius:6 }] },
  options: { responsive:true, maintainAspectRatio:false, plugins:{ tooltip:{backgroundColor:'#276749', titleColor:'#fff', bodyColor:'#fff', padding:10, cornerRadius:8}, legend:{display:false}}, scales:{ y:{ beginAtZero:true, grid:{color:'rgba(0,0,0,0.05)'}}, x:{grid:{display:false}}} }
});
</script>
</body>
</html>
