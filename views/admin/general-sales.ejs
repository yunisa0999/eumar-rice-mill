<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Admin Dashboard - Total Sales</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
  body {
    font-family: 'Poppins', 'Segoe UI', sans-serif;
    background-color: #F5F7F5;
    overflow-x: hidden;
  }
  .sidebar {
    width: 250px;
    height: 100vh;
    background-color: #2E8B57;
    position: fixed;
    top: 0;
    left: 0;
    padding-top: 1rem;
    color: white;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    box-shadow: 2px 0 10px rgba(0,0,0,0.08);
  }
  .sidebar-logo img {
    width: 150px;
    height: 150px;
    object-fit: contain;
    border-radius: 50%;
    margin: 0 auto 1rem;
    display: block;
    box-shadow: 5px rgb(246,243,243);
  }
  .sidebar h2 {
    text-align: center;
    font-weight: 700;
    letter-spacing: 1px;
    font-size: 1.3rem;
    color: #A7C957;
    margin-bottom: 1.5rem;
    user-select: none;
  }
  .nav-link {
    color: #FDFDFD;
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    transition: background-color 0.3s, padding-left 0.2s;
    border-left: 4px solid transparent;
  }
  .nav-link:hover {
    background-color: #3DAE72;
    border-left: 4px solid #A7C957;
    padding-left: 1.8rem;
    text-decoration: none;
  }
  .nav-link.active {
    background-color: #276749;
    border-left: 4px solid #A7C957;
  }
  .nav-link svg {
    width: 20px;
    height: 20px;
    margin-right: 0.8rem;
    fill: white;
  }
  .topbar {
    position: fixed;
    top: 0;
    left: 250px;
    right: 0;
    height: 60px;
    background-color: #2E8B57; 
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    z-index: 999;
    padding: 0 1rem;
  }
  .topbar a {
    color: white;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s;
    font-size: 0.95rem;
  }
  .topbar a:hover { color: #A7C957; }
  main {
    margin-left: 250px; 
    margin-top: 70px;       
    padding: 1rem 2rem; 
    background-color: transparent;
  }
  .card-header i {
    margin-right: 6px;
  }
  .table th, .table td {
    vertical-align: middle;
  }
  .btn-outline-primary:hover {
    background-color: #0d6efd;
    color: #fff;
  }
</style>
</head>
<body>

  <aside class="sidebar">
    <div class="sidebar-logo">
      <img src="/ermlogo.png" alt="ERM Logo">
    </div>
    <h2>Admin Dashboard</h2>
    <a href="/admin" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8v-10h-8v10zm0-18v6h8V3h-8z"/></svg>
      Dashboard
    </a>
    <a href="/admin/sales" class="nav-link active">
      <svg viewBox="0 0 24 24"><path d="M4 19h16v-2H4v2zm0-6h16v-2H4v2zm0-6v2h16V7H4z"/></svg>
      Sales
    </a>
    <a href="/admin/queue" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M12 7V3L8 7h4zm0 2v7h-4l4 4 4-4h-4v-7z"/></svg>
      Queue
    </a>
    <a href="/inventory" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M4 4h16v2H4V4zm0 4h16v12H4V8zm3 2v8h2v-8H7zm4 0v8h2v-8h-2zm4 0v8h2v-8h-2z"/></svg>
      Inventory
    </a>
     <a href="#" class="nav-link">
      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
      <span>Reports</span>
    </a>
  <a href="/logout" class="nav-link mt-auto text-white">
  <svg viewBox="0 0 24 24" fill="white">
    <path d="M16 13v-2H7V8l-5 4 5 4v-3zM20 3h-8v2h8v14h-8v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
  </svg>
  Logout
</a>
  </aside>
<div class="topbar">
  <a href="/admin/overall-sales">Overall Sales</a>
  <a href="/admin/general-sales">General Sales</a>
   <a href="/admin/gross-income">Gross Income</a>
</div>

  <main>
    <div class="container-fluid">
      <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h3 class="fw-bold text-dark mb-0">
          <i class="bi bi-bar-chart-fill text-primary"></i> Total Sales Summary
        </h3>
        <a href="/admin/general-sales/download" class="btn btn-outline-primary d-flex align-items-center gap-2">
          <i class="bi bi-download"></i> Download Excel
        </a>
      </div>

      <div class="row mb-4">
        <div class="col-sm-6 col-md-3 mb-3">
          <div class="card shadow-sm border-0">
            <div class="card-body text-center">
              <h5 class="card-title fw-semibold text-success">Total Done Transactions</h5>
              <p class="display-6 fw-bold mb-0"><%= totalDoneTransactions %></p>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-md-3 mb-3">
          <div class="card shadow-sm border-0">
            <div class="card-body text-center">
              <h5 class="card-title fw-semibold text-success">Total Income</h5>
              <p class="display-6 fw-bold mb-0">₱<%= totalIncome ? Number(totalIncome).toFixed(2) : '0.00' %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white fw-semibold fs-5">
          <i class="bi bi-receipt"></i> Completed Transactions
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-bordered table-hover mb-0">
              <thead class="table-dark">
                <tr>
                  <th>Queue ID</th>
                  <th>Customer Name</th>
                  <th>Contact Number</th>
                  <th>Service Type</th>
                  <th>Sacks</th>
                  <th>Weight</th>
                  <th>Product Type</th>
                  <th>Product</th>
                  <th>Quantity</th>
                  <th>Delivery Method</th>
                  <th>Preferred Date/Time</th>
                  <th>Payment Method</th>
                  <th>Amount</th>
                  <th>Created At</th>
                </tr>
              </thead>
              <tbody>
                <% if (doneTransactions.length === 0) { %>
                  <tr>
                    <td colspan="14" class="text-center text-muted">No done transactions found.</td>
                  </tr>
                <% } else { %>
                  <% doneTransactions.forEach(function(transaction) { %>
                    <tr>
                      <td><%= transaction.queue_id %></td>
                      <td><%= transaction.customer_name %></td>
                      <td><%= transaction.contact_number %></td>
                      <td><%= transaction.service_type %></td>
                      <td><%= transaction.sacks %></td>
                      <td><%= transaction.weight %></td>
                      <td><%= transaction.product_type %></td>
                      <td><%= transaction.product %></td>
                      <td><%= transaction.quantity %></td>
                      <td><%= transaction.delivery_method %></td>
                      <td><%= transaction.preferred_datetime ? new Date(transaction.preferred_datetime).toLocaleString() : '-' %></td>
                      <td><%= transaction.payment_method %></td>
                      <td>₱<%= transaction.amount ? Number(transaction.amount).toFixed(2) : '0.00' %></td>
                      <td><%= new Date(transaction.created_at).toLocaleString() %></td>
                    </tr>
                  <% }); %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
