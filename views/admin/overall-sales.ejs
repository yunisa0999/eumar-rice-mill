<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Dashboard - Eumar Rice Mill</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<style>
   body {
      font-family: 'Poppins', 'Segoe UI', sans-serif;
      background-color: #F5F7F5;
      overflow-x: hidden;
    }

    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #2E8B57;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 1rem;
      color: white;
      display: flex;
      flex-direction: column;
      overflow-y: auto;
      box-shadow: 2px 0 10px rgba(0,0,0,0.08);
    }

    .sidebar-logo img {
      width: 150px;
      height: 150px;
      object-fit: contain;
      border-radius: 50%;
      margin: 0 auto 1rem;
      display: block;
      box-shadow: 5px rgb(246,243,243);
    }

    .sidebar h2 {
      text-align: center;
      font-weight: 700;
      letter-spacing: 1px;
      font-size: 1.3rem;
      color: #A7C957;
      margin-bottom: 1.5rem;
      user-select: none;
    }

    .nav-link {
      color: #FDFDFD;
      font-weight: 500;
      padding: 0.75rem 1.5rem;
      transition: background-color 0.3s, padding-left 0.2s;
      border-left: 4px solid transparent;
    }

    .nav-link:hover {
      background-color: #3DAE72;
      border-left: 4px solid #A7C957;
      padding-left: 1.8rem;
      text-decoration: none;
    }

    .nav-link.active {
      background-color: #276749;
      border-left: 4px solid #A7C957;
    }

    .nav-link svg {
      width: 20px;
      height: 20px;
      margin-right: 0.8rem;
      fill: white;
    }
    
  .topbar {
    position: fixed;
    top: 0;
    left: 250px;
    right: 0;
    height: 60px;
    background-color: #2E8B57; 
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    z-index: 999;
    padding: 0 1rem;
  }

  .topbar a {
    color: white;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s;
    font-size: 0.95rem;
  }

  .topbar a:hover { color: #A7C957;
   }
 
.main-content {
  margin-left: 250px; 
  padding: 5rem 1.5rem 4rem 1.5rem; 
  background-color: #F9FAF9;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  color: #2D2D2D;
  font-size: 0.95rem;
  overflow-x: hidden;
}

.card {
  padding-left: 1rem;
  padding-right: 1rem;
}

.card canvas {
  max-height: 320px;
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

.card-body h6 {
  font-weight: 600;
  color: #666666;
  letter-spacing: 0.03em;
  margin-bottom: 0.5rem;
}

.card-body h3 {
  font-weight: 700;
  font-size: 1.9rem;
}

.text-success {
  color: #27AE60 !important;
}
.text-primary {
  color: #2980B9 !important;
}
.text-warning {
  color: #F39C12 !important;
}
.text-danger {
  color: #E74C3C !important;
}

.card-header {
  border-radius: 12px 12px 0 0;
  font-weight: 700;
  font-size: 1.15rem;
  letter-spacing: 0.03em;
  padding: 1rem 1.5rem;
  box-shadow: inset 0 -3px 6px rgba(0,0,0,0.1);
}

.card-header.bg-success {
  background-color: #27AE60 !important;
}

.card-header.bg-primary {
  background-color: #2980B9 !important;
}

.card-header.bg-info {
  background-color: #3498DB !important;
}

.table-striped tbody tr:nth-of-type(odd) {
  background-color: #F7F9F9;
}

.table-hover tbody tr:hover {
  background-color: #E8F5E9;
  cursor: pointer;
}

.table thead th {
  border-bottom: 2px solid #ddd;
  font-weight: 600;
  letter-spacing: 0.05em;
}

.badge.bg-success {
  background-color: #27AE60 !important;
  font-weight: 600;
  padding: 0.5em 0.75em;
  font-size: 0.85rem;
  border-radius: 0.5rem;
}

.badge.bg-danger {
  background-color: #E74C3C !important;
  font-weight: 600;
  padding: 0.5em 0.75em;
  font-size: 0.85rem;
  border-radius: 0.5rem;
}

@media (max-width: 768px) {
  .main-content {
    margin-left: 70px;
    padding: 1.5rem 1.5rem 3rem 1.5rem;
  }
}

.nav-link {
  transition: background-color 0.3s ease, border-color 0.3s ease, padding-left 0.3s ease;
}

  </style>
</head>
<body>

<div class="topbar">
 <a href="/admin/overall-sales">Overall Sales</a>
  <a href="/admin/general-sales">General Sales</a>
   <a href="/admin/gross-income">Gross Income</a>
</div>

  <aside class="sidebar">
    <div class="sidebar-logo">
      <img src="/ermlogo.png" alt="ERM Logo">
    </div>
    <h2>Admin Dashboard</h2>
    <a href="/admin" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8v-10h-8v10zm0-18v6h8V3h-8z"/></svg>
      Dashboard
    </a>
    <a href="/admin/sales" class="nav-link active">
      <svg viewBox="0 0 24 24"><path d="M4 19h16v-2H4v2zm0-6h16v-2H4v2zm0-6v2h16V7H4z"/></svg>
      Sales
    </a>
    <a href="/admin/queue" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M12 7V3L8 7h4zm0 2v7h-4l4 4 4-4h-4v-7z"/></svg>
      Queue
    </a>
    <a href="/inventory" class="nav-link">
      <svg viewBox="0 0 24 24"><path d="M4 4h16v2H4V4zm0 4h16v12H4V8zm3 2v8h2v-8H7zm4 0v8h2v-8h-2zm4 0v8h2v-8h-2z"/></svg>
      Inventory
    </a>
     <a href="#" class="nav-link">
      <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
      <span>Reports</span>
    </a>
  <a href="/logout" class="nav-link mt-auto text-white">
  <svg viewBox="0 0 24 24" fill="white">
    <path d="M16 13v-2H7V8l-5 4 5 4v-3zM20 3h-8v2h8v14h-8v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
  </svg>
  Logout
</a>
  </aside>
  <main class="main-content">
  <div class="container-fluid px-2 px-md-4">
    
    <div class="row gx-2 gy-3 mb-4">
      <div class="col-md-3 col-sm-6">
        <div class="card shadow-sm border-0">
          <div class="card-body text-center">
            <h6 class="text-muted">Daily Revenue</h6>
            <h3 class="text-success">₱<%= typeof dailyRevenue === 'number' ? dailyRevenue.toFixed(2) : '0.00' %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6">
        <div class="card shadow-sm border-0">
          <div class="card-body text-center">
            <h6 class="text-muted">Monthly Revenue</h6>
            <h3 class="text-primary">₱<%= typeof monthlyRevenue === 'number' ? monthlyRevenue.toFixed(2) : '0.00' %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6">
        <div class="card shadow-sm border-0">
          <div class="card-body text-center">
            <h6 class="text-muted">Total Sales</h6>
            <h3 class="text-warning"><%= typeof totalSales !== 'undefined' ? totalSales : '0' %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-6">
        <div class="card shadow-sm border-0">
          <div class="card-body text-center">
            <h6 class="text-muted">Avg Queue Time</h6>
            <h3 class="text-danger"><%= typeof queueAnalytics === 'number' ? queueAnalytics.toFixed(2) : '0.00' %> mins</h3>
          </div>
        </div>
      </div>
    </div>

<div class="row gx-2 gy-4 mb-4">
  <div class="col-12">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-info text-white">
        Inventory Status
      </div>
      <div class="card-body table-responsive">
        <table class="table table-striped table-hover align-middle mb-0">
          <thead class="table-dark">
            <tr>
              <th>Item</th>
              <th>Quantity</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% inventoryStatus.forEach(item => { %>
              <tr>
                <td><%= item.item_name %></td>
                <td><%= item.quantity %></td>
                <td>
                  <span class="badge <%= item.quantity > 0 ? 'bg-success' : 'bg-danger' %>">
                    <%= item.status %>
                  </span>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  const dailySalesData = JSON.parse('<%= JSON.stringify(dailySales || []) %>');

  console.log('Daily Sales Data:', dailySalesData);

  const labels = dailySalesData.map(sale => sale.sale_date);
  const revenues = dailySalesData.map(sale => sale.daily_revenue);

  const ctx = document.getElementById('dailySalesChart').getContext('2d');

  const dailySalesChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: labels,
      datasets: [{
        label: 'Daily Revenue',
        data: revenues,
        backgroundColor: 'rgba(54, 162, 235, 0.2)',
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 2,
        fill: true,
        tension: 0.1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true,
          title: { display: true, text: 'Revenue (₱)' }
        },
        x: {
          title: { display: true, text: 'Date' }
        }
      },
      plugins: {
        legend: { display: true }
      }
    }
  });
</script>
</body>
</html>