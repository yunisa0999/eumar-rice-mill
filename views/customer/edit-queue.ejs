<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Queue Entry</title>
  <style>

    form {
      max-width: 600px;
      margin: 20px auto;
      background: #f9f9f9;
      padding: 20px;
      border-radius: 6px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    label {
      display: block;
      margin-top: 10px;
      font-weight: bold;
    }
    input, select, textarea {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border-radius: 4px;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }
    button {
      margin-top: 15px;
      padding: 10px 15px;
      background-color: #27ae60;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    button:hover {
      background-color: #219150;
    }
  </style>
</head>
<body>
  <h1>Edit Queue Entry</h1>
  <form action="/queue/<%= queueEntry.queue_id %>/edit" method="POST">
    <label for="customer_name">Customer Name</label>
    <input type="text" id="customer_name" name="customer_name" value="<%= queueEntry.customer_name %>" required />

    <label for="contact_number">Contact Number</label>
    <input type="text" id="contact_number" name="contact_number" value="<%= queueEntry.contact_number %>" />

    <label for="service_type">Service Type</label>
    <select id="service_type" name="service_type" required>
      <option value="milling" <%= queueEntry.service_type === 'milling' ? 'selected' : '' %>>Milling</option>
      <option value="weighing" <%= queueEntry.service_type === 'weighing' ? 'selected' : '' %>>Weighing</option>
      <option value="payment" <%= queueEntry.service_type === 'payment' ? 'selected' : '' %>>Payment</option>
    </select>

    <label for="sacks">Sacks</label>
    <input type="number" id="sacks" name="sacks" value="<%= queueEntry.sacks %>" />

    <label for="weight">Weight</label>
    <input type="number" step="0.01" id="weight" name="weight" value="<%= queueEntry.weight %>" />

    <label for="product_type">Product Type</label>
    <input type="text" id="product_type" name="product_type" value="<%= queueEntry.product_type %>" />

    <label for="product">Product</label>
    <input type="text" id="product" name="product" value="<%= queueEntry.product %>" />

    <label for="quantity">Quantity</label>
    <input type="number" id="quantity" name="quantity" value="<%= queueEntry.quantity %>" />

    <label for="delivery_method">Delivery Method</label>
    <input type="text" id="delivery_method" name="delivery_method" value="<%= queueEntry.delivery_method %>" />

    <label for="preferred_datetime">Preferred Date & Time</label>
    <input type="datetime-local" id="preferred_datetime" name="preferred_datetime" value="<%= queueEntry.preferred_datetime ? queueEntry.preferred_datetime.toISOString().slice(0,16) : '' %>" />

    <label for="payment_method">Payment Method</label>
    <input type="text" id="payment_method" name="payment_method" value="<%= queueEntry.payment_method %>" />

    <label for="notes">Notes</label>
    <textarea id="notes" name="notes"><%= queueEntry.notes %></textarea>

    <label for="status">Status</label>
    <select id="status" name="status">
      <option value="waiting" <%= queueEntry.status === 'waiting' ? 'selected' : '' %>>Waiting</option>
      <option value="serving" <%= queueEntry.status === 'serving' ? 'selected' : '' %>>Serving</option>
      <option value="done" <%= queueEntry.status === 'done' ? 'selected' : '' %>>Done</option>
    </select>

    <button type="submit">Save Changes</button>
  </form>
</body>
</html>
