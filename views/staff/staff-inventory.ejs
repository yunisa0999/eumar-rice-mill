<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title> Eumar Rice Mill</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    html, body {
  height: 100%;
  margin: 0;
  padding: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: #2c3e50;
  background-color: #f5f6f7;
  overflow-y: auto; 
  overflow-x: hidden; 
}

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      width: 230px;
      height: 100vh;
      background-color: #0b6514; 
      color: #ffffff;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding: 40px 25px;
    }

    .sidebar h2 {
      display: flex;
      align-items: center;
      font-size: 1.3rem;
      font-weight: 700;
      margin-bottom: 40px;
    }

    .sidebar h2 i {
      margin-right: 10px;
      font-size: 1.4rem;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 10px;
      width: 100%;
      color: #ffffff;
      font-weight: 600;
      text-decoration: none;
      padding: 12px 18px;
      border-radius: 8px;
      margin-bottom: 10px;
      transition: all 0.3s ease;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background-color: #34a853;
    }

    .sidebar a:last-child {
      margin-top: auto;
    }

    .main-content {
      margin-left: 240px;
      padding: 40px 50px;
      min-height: 100vh;
      background-color: #f7f9fc;
      color: #2c3e50;
      font-size: 15px;
      overflow-x: auto;
    }

    .card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08);
      padding: 25px 30px;
      margin-bottom: 40px;
    }

    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0 10px;
    }

    thead tr {
      background-color: #3B3552;
      color: #fff;
      text-align: left;
      border-radius: 10px;
      user-select: none;
    }

    thead th {
      padding: 12px 15px;
      font-weight: 600;
    }

    tbody tr {
      background: #fff;
      box-shadow: 0 2px 7px rgba(0,0,0,0.05);
      border-radius: 8px;
      transition: background-color 0.3s ease;
    }

    tbody tr:hover {
      background-color: #eaf7ea;
    }

    tbody td {
      padding: 15px;
      border: none;
      vertical-align: middle;
    }

    .badge {
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 0.85rem;
      font-weight: 600;
      color: #fff;
      display: inline-block;
      user-select: none;
    }

    .in-stock {
      background-color: #27ae60;
    }

    .out-stock {
      background-color: #c0392b;
    }

    #addItemBtn {
      position: fixed;
      top: 30px;
      right: 30px;
      background-color: #27ae60;
      border: none;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      color: white;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
      box-shadow: 0 4px 8px rgba(39, 174, 96, 0.5);
      transition: background-color 0.3s ease;
      z-index: 1100;
      user-select: none;
    }

    #addItemBtn:hover {
      background-color: #219150;
    }

  </style>
</head>
<body>
  
  <nav class="sidebar">
    <h2><i class="bi bi-person-badge-fill"></i> Staff Panel</h2>

    <a href="/staff-overview">
      <i class="bi bi-speedometer2"></i> Overview
    </a>

    <a href="/queue">
      <i class="bi bi-people-fill"></i> Queue
    </a>

    <a href="/sales">
      <i class="bi bi-bar-chart-line-fill"></i> Sales
    </a>

    <a href="/staff-inventory"  class="active">
      <i class="bi bi-box-seam-fill"></i> Inventory
    </a>

    <a href="/logout">
      <i class="bi bi-box-arrow-right"></i> Logout
    </a>
  </nav>

  <main class="main-content">
    <section class="card">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Unit Price (₱)</th>
            <th>Category</th>
            <th>Status</th>
            <th>Last Updated</th>
          </tr>
        </thead>
        <tbody>
          <% if (items && items.length > 0) { %>
            <% items.forEach(item => { %>
              <tr>
                <td><%= item.item_id %></td>
                <td><%= item.item_name %></td>
                <td><%= item.quantity %></td>
                <td><%= (item.unit_price != null && !isNaN(item.unit_price) ? Number(item.unit_price).toFixed(2) : '0.00') %></td>
                <td><%= item.category || 'N/A' %></td>
                <td>
                  <% if (item.quantity > 0) { %>
                    <span class="badge in-stock">In Stock</span>
                  <% } else { %>
                    <span class="badge out-stock">Out of Stock</span>
                  <% } %>
                </td>
                <td><%= new Date(item.updated_at).toLocaleString() %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center">No inventory data found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>
  </main>

  <button id="addItemBtn" aria-label="Add New Inventory Item" title="Add New Inventory Item">+</button>

  <div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addItemModalLabel">Add New Inventory Item</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/staff/inventory/add" method="POST" autocomplete="off">
          <div class="modal-body">
            <label for="item_name" class="form-label">Item Name</label>
            <input type="text" class="form-control" name="item_name" id="item_name" required />

            <label for="quantity" class="form-label mt-3">Quantity</label>
            <input type="number" class="form-control" name="quantity" id="quantity" min="0" required />

            <label for="unit_price" class="form-label mt-3">Unit Price (₱)</label>
            <input type="number" class="form-control" name="unit_price" id="unit_price" step="0.01" min="0" required />

            <label for="category" class="form-label mt-3">Category</label>
            <input type="text" class="form-control" name="category" id="category" />

            <label for="status" class="form-label mt-3">Status</label>
            <select class="form-select" name="status" id="status" required>
              <option value="Available">Available</option>
              <option value="Out of Stock">Out of Stock</option>
            </select>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary w-100">Add Item</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const addItemBtn = document.getElementById('addItemBtn');
    const addItemModal = new bootstrap.Modal(document.getElementById('addItemModal'));

    addItemBtn.addEventListener('click', () => {
      addItemModal.show();
    });
  </script>
</body>
</html>
