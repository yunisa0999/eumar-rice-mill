    } else if (val === '=') {
      try {
        currentField.value = eval(currentField.value.replace(/Ã—/g,'*').replace(/Ã·/g,'/'));
      } catch(e) {
        currentField.value = 'Error';
      }
    } else {
      currentField.value += val;
    }
  });
