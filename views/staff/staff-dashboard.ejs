<script>
const tbody = document.getElementById('queue-body');

 function renderQueue(queueData) {
  tbody.innerHTML = '';  

  if (!queueData || queueData.length === 0) {
    tbody.innerHTML = `<tr><td colspan="6" class="text-center text-muted">No queue entries</td></tr>`;
    return;
  }

  queueData.forEach(q => {
    const tr = document.createElement('tr');
    tr.dataset.id = q.id;
    tr.dataset.service = q.service_type;
    tr.dataset.name = q.customer_name;
    tr.dataset.queue = q.queue_number;

    let actions = '';

    if (q.service_type.toLowerCase() === 'milling') {
      actions += `<button class="btn btn-success input-btn" data-id="${q.id}">Input</button> `;
    } else {
      actions += `<button class="btn btn-success view-btn"
                  data-id="${q.id}"
                  data-service="${q.service_type}"
                  data-name="${q.customer_name}"
                  data-queue="${q.queue_number}">View</button> `;
    }

    if (q.status !== 'completed') {
      actions += `<button class="btn btn-danger cancel-btn" data-id="${q.id}" data-name="${q.customer_name}" data-queue="${q.queue_number}">Cancel</button> `;
    }

    if (q.status === 'waiting') {
      actions += `<button class="btn btn-primary approve-btn" data-id="${q.id}" data-name="${q.customer_name}" data-queue="${q.queue_number}">Approve</button> `;
    }

    if (q.status === 'serving') {
      actions += `<form action="/queue/${q.id}/done" method="post" class="d-inline">
                    <button class="btn btn-secondary" type="submit">Complete</button>
                  </form>`;
    }

    tr.innerHTML = `
      <td>${q.id}</td>
      <td>${q.customer_name}</td>
      <td>${q.service_type}</td>
      <td><span class="status ${q.status}">${q.status}</span></td>
      <td>${q.queue_number}</td>
      <td>${actions}</td>
    `;

    tbody.appendChild(tr);
  });
}

 const socket = io();
socket.on('queueUpdated', updatedQueue => {
  renderQueue(updatedQueue);
});
document.addEventListener('click', async e => {

   if (e.target.matches('.input-btn')) {
    const id = e.target.dataset.id;
    const inputForm = document.getElementById('inputForm');
    inputForm.action = `/queue/${id}/input-amount`;
    new bootstrap.Modal(document.getElementById('inputModal')).show();
  }

   if (e.target.matches('.view-btn')) {
    const id = e.target.dataset.id;
    try {
      const response = await fetch(`/queue/${id}/details`);
      if (!response.ok) throw new Error('Failed to load details');
      const data = await response.json();

      let content = `
        <p><strong>Name:</strong> ${data.customer_name}</p>
        <p><strong>Service:</strong> ${data.service_type}</p>
        <p><strong>Queue No.:</strong> ${data.queue_number}</p>
      `;

      if (data.service_type.toLowerCase() === 'purchasing') {
        content += `
          <p><strong>Product:</strong> ${data.product_name || 'N/A'}</p>
          <p><strong>Quantity:</strong> ${data.quantity || 0}</p>
          <p><strong>Total Amount:</strong> â‚±${Number(data.amount || 0).toFixed(2)}</p>
          <p><strong>Notes:</strong> ${data.notes || 'None'}</p>
        `;
      } else if (data.service_type.toLowerCase() === 'milling') {
        content += `
          <p><strong>Weight:</strong> ${data.weight || 'N/A'} kg</p>
          <p><strong>Rice Type:</strong> ${data.product_type || 'N/A'}</p>
        `;
      }

      document.getElementById('viewModalBody').innerHTML = content;
      new bootstrap.Modal(document.getElementById('viewModal')).show();
    } catch (err) {
      console.error('Error loading queue details:', err);
      alert('Unable to load order details.');
    }
  }

   if (e.target.matches('.cancel-btn')) {
    const { id, name, queue } = e.target.dataset;
    document.getElementById('cancelCustomerName').textContent = name;
    document.getElementById('cancelQueueNumber').textContent = queue;
    document.getElementById('cancelForm').action = `/queue/${id}/cancel`;
    new bootstrap.Modal(document.getElementById('cancelModal')).show();
  }

   if (e.target.matches('.approve-btn')) {
    const { id, name, queue } = e.target.dataset;
    document.getElementById('approveCustomerName').textContent = name;
    document.getElementById('approveQueueNumber').textContent = queue;
    document.getElementById('approveForm').action = `/queue/${id}/approve`;
    new bootstrap.Modal(document.getElementById('approveModal')).show();
  }

});

const calculatorBtn = document.getElementById('calculatorBtn');
const calculatorPanel = document.getElementById('calculatorPanel');
let currentField = document.getElementById('calcInput');

 calculatorBtn.addEventListener('click', () => {
  calculatorPanel.style.display = calculatorPanel.style.display === 'block' ? 'none' : 'block';
});

 document.querySelectorAll('.calc-input').forEach(input => {
  input.addEventListener('focus', () => {
    currentField = input;
  });
});

 document.querySelectorAll('.buttons-grid .button').forEach(btn => {
  btn.addEventListener('click', () => {
    if (!currentField) return;
    const val = btn.textContent;

    if (val === 'C') {
      currentField.value = '';
    } else if (val === '<') {
